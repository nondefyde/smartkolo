<%- layout("template1")%>

<!-- Main jumbotron for a primary marketing message or call to action -->

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-lg-5">
            <img src="hadi2.jpg" class="img-responsive" alt="can't display photo"/>
        </div>
        <div class="col-lg-3">
            <h4 align="center">Did You Know</h4>
            <p align="center">You can make money on Zeedwin? visit our help link to know more.</p>
            <p align="center">You can market yourself to the world? visit our consultative link for more.</p>
        </div>
        <div class="col-lg-4" style="padding-right: 70px;">
            <div class="col-lg-12" style="border:#737373 solid 5px;padding-left: 50px; padding-top: 30px;background-color: whitesmoke">
                <% if(message.length>0) {%>
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times</span>
                    </button>
                    <%=message%>
                </div>
                <%}%>
                <form class="form-horizontal" role="form" method="post">
                    <div class="form-group">

                        <div class="col-lg-11">
                            <input type="text" name="username" class="form-control" id="inputEmail1" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-11">
                            <input type="password" name="password" class="form-control" id="inputPassword1" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-lg-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-lg-12">
                            <button type="submit" class="btn btn-success">Sign in</button>
                            <span class="help-block">No account? <a href="/signup">click</a> to Signup</span>

                        </div>

                    </div>
                </form></div>

        </div>
    </div>

    <hr>
</div> <!-- /container -->
