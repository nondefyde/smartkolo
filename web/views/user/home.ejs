<%- layout("template1")%>
<div class="row">
    <h2><%=user.name.fname%> <%=user.name.lname%></h2>
    <div class="col-xs-12 col-sm-12">
        <div class="col-xs-2 col-sm-2 col-md-3 col-lg-3">
            <div class="col-xs-5 col-sm-4" >
                <img src="/uploads/default.jpg" class="img-responsive" alt="No picture" />
            </div>
            <div class="col-xs-7 col-sm-8">
                <p style="margin:0px;font-size:12px"><%=user.username%></p>
                <p style="margin:0px;font-size:12px"><a href="/user/profile">View Profile </a>| <a href="/logout">Logout</a></p>
                <p style="margin:0px;font-size:12px"><a href="/user/update-profile">Edit Profile</a></p>
            </div>
        </div>

        <div class="col-xs-10 col-sm-10 col-md-9 col-lg-9">
            <form role="form" name="mailform" class="form-horizontal" action="#" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <label for="inputEmail" class="control-label col-xs-3">Enter Description</label>
                    <div class="col-xs-7">
                        <input type="text" required class="form-control" id="inputEmail" name="searchmail" placeholder="Enter Your Description to Search">
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">

                        <button type="submit" name="submitsearch" class="btn btn-success">Search Mail</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class=" row container-hd">
    <div class="col-lg-12">
        <div  class="col-lg-3 leftnavy">
            <div class="nav-head"><h4>Quick Access</h4></div>
            <div class="list-group show" style="margin-bottom:50px;line-height:5px; display: list-item">
                <a href="/user/post" class="list-group-item">New Post</a>
                <a href="#" class="list-group-item">My Posts</a>
                <a href="#" class="list-group-item">Saved posts</a>
            </div>

        </div>
        <div  class="col-sm-6 col-md-6 col-lg-7">
            <div class="col-lg-12" style="width:100%; background-color:#737373;padding-bottom: 5%; margin-bottom:10%; border:4px solid #ffffff;">
                <p style="text-align: center;"><span style="color:#FFFFFF; font-weight:bold; font-family:'Times New Roman', Times, serif; font-size:16px;"> <%=user.username%> - You are in Your profile</span></p>
                <p style="text-align:right"><a href="/user/update-profile" style=" background-color: #ffffff">Update Profile</a></p>
                <div class="col-lg-12" style=" background-color:#FFFFFF; margin-top:2%; padding-top:20px; padding-left:20px;padding-bottom:5%;">



                    <div class="col-lg-3" style="margin-bottom:0%">

                        <p> <img src="/uploads/default.jpg" class="img-responsive">
                    </div>
                    <div class="col-lg-9" style="margin-bottom:0%">

                        <table class="table table-condensed" style="background-color:#FFFFFF;">
                            <tbody>
                            <tr>
                                <td>Name : </td>
                                <td colspan="2"><%=user.name.fname%>  <%=user.name.lname%></td>
                            </tr>
                            <tr>
                                <td>Username : </td>
                                <td colspan="2"><%=user.username%></td>
                            </tr>
                            <tr>
                                <td>Email : </td>
                                <td colspan="2"><%=user.email%></td>
                            </tr>
                            <tr>
                                <td>Phone : </td>
                                <td colspan="2"><%=user.phone%></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
