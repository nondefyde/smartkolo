<%-layout("template1")%>
    <div class="row">

        <div class="col-lg-4 col-lg-offset-4"  style="border: #030903 groove 5px;border-radius: 5px; margin-top: 30px; padding-top:10px">
            <% if(message.length>0) {%>
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times</span>
                </button>
                <%=message%>
            </div>
            <%}%>
            <form class="form-horizontal" action="/signup"  role="form" method="post">
                <h3>Sign up</h3>
                <div class="form-group">
                    <label for="username" class="col-lg-3 control-label">Username</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                    </div>
                </div>
                <div class="form-group">
                    <label for="fname" class="col-lg-3 control-label">Firstname</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" id="fname" name="fname" placeholder="Firstame">
                    </div>
                </div>
                <div class="form-group">
                    <label for="lname" class="col-lg-3 control-label">Lastname</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" id="lname" name="lname" placeholder="Lastname">
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-lg-3 control-label">Email</label>
                    <div class="col-lg-8">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-lg-3 control-label">Phone</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone Number">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-lg-3 control-label">Password</label>
                    <div class="col-lg-8">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-lg-3 control-label">Password</label>
                    <div class="col-lg-8">
                        <input type="password" class="form-control" id="password" name="cpassword" placeholder="Confirm Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-1 col-lg-10">
                        <button type="submit" class="btn btn-success">Sign up</button>
                        <p class="text-info"><a href="/">Already have an account? click to login</a></p>
                    </div>

                </div>
            </form>

        </div>
    </div>
